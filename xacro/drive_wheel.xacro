<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="barista_bot">
  <xacro:macro name="drive_wheel" params="side parent xyz rpy axis">
    <joint name="${side}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${side}_wheel"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="${axis}"/>
    </joint>
    <link name="${side}_wheel">
      <visual><geometry><cylinder radius="0.0352" length="0.0206"/></geometry></visual>
      <collision><geometry><cylinder radius="0.0352" length="0.0206"/></geometry></collision>
      <inertial><mass value="1.5"/></inertial>
    </link>
  </xacro:macro>
</robot>
